{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "abstracts/*": ["abstracts/*"],
      "classes/*": ["classes/*"],
      "common/*": ["common/*"],
      "interfaces/*": ["interfaces/*"],
      "utils/*": ["utils/*"]
    },
    "module": "CommonJS",
    "outDir": "./dist",
    "target": "ES6",
    "declarationDir": "./dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
